#!/bin/bash

function install_link {
    dst="$HOME/.$1"
    if [[ -a $dst ]]; then
	if [[ -L $dst ]] || diff $dst "/etc/skel/.$1" >/dev/null 2>&1 ; then
            true
	else
	    mv $dst "$HOME/old-$1"
	fi
    fi
    ln -sf "$CONF/init/$1" $dst
}

if [[ -z $CONF ]] || [[ -z $HOME ]] ; then
    echo `basename $0`: CONF and HOME must be set
    exit
fi
for i in `ls $CONF/init`; do install_link $i; done
