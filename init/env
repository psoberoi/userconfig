source ~/.userconfig

export USERCONFIG_DIRS="\
  $CONF/common \
  $CONF/plat/$PLAT \
  $CONF-$SITE \
  $CONF-$SITE/plat/$PLAT \
  $CONF-$SITE/host/$HOST \
  $CONF-$SITE/host/$HOST/plat/$PLAT"

function source_if_exists {
    [[ -a $1 ]] && source $1
}

export -f source_if_exists

for d in $USERCONFIG_DIRS; do
    source_if_exists $d/etc/env
done

