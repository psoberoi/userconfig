source ~/.userconfig

function source_if_exists {
    [[ -a $1 ]] && source $1
}

source_if_exists $CONF/common/etc/profile
source_if_exists $CONF/plat/$PLAT/etc/profile
source_if_exists $CONF-$SITE/etc/profile
source_if_exists $CONF-$SITE/plat/$PLAT/etc/profile
source_if_exists $CONF-$SITE/host/$HOST/etc/profile
source_if_exists $CONF-$SITE/host/$HOST/plat/$PLAT/etc/profile

[[ $1 != NO_BASHRC ]] && source ~/.bashrc
