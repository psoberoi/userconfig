#
# BASH settings for interactive shells
#

[ -r ~/.bash/aliases ] && source ~/.bash/aliases

set -o ignoreeof       # ignore ^D to exit shell
set -o notify          # report change in jobs' status
unset MAILCHECK

shopt -s cdspell
shopt -s checkhash
shopt -s checkwinsize
shopt -s histappend
shopt -s no_empty_cmd_completion

export PYTHONSTARTUP=$HOME/.pythonstartup
export EDITOR=vim

# #MAILPATH=$HOME/mail/mbox:/var/spool/mail/$USER
# MAILPATH=/var/spool/mail/$USER

PS1="\h(\!)[\w]\\\$ "

if [ $TERM == xterm ]; then
	# Set title bar on xterms
	#export PS1=$PS1"\[\e]0;\h: `pwd`\a\]"
	#PS1=$PS1"\[\e]0;\h: \w\a\]"

	# use xrs (resize) to reset your window size after
	# you have resized an xterm (is this needed?)
	alias xrs='set -o noglob; eval `resize`; set +o noglob'
fi
